<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:shortcut="clr-namespace:ImageSort.WPF.SettingsManagement.ShortCutManagement"
                    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">
    <Style x:Key="{x:Type shortcut:HotkeyEditorControl}" TargetType="shortcut:HotkeyEditorControl">
        <Style.Resources>
            <ResourceDictionary>
                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                    <Setter Property="BorderBrush" Value="{DynamicResource adonisUi:Brushes.AccentForegroundBrush}" />
                    <Setter Property="BorderThickness" Value="{adonisUi:Space 0, 0, 0, 0.25}" />
                    <Setter Property="Padding" Value="{adonisUi:Space 0, 0.5}" />
                </Style>
            </ResourceDictionary>
        </Style.Resources>

        <Setter Property="Margin" Value="{adonisUi:Space 0.5}" />
    </Style>
</ResourceDictionary>