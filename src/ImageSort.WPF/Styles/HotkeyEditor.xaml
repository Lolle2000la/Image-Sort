<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:shortcut="clr-namespace:ImageSort.WPF.SettingsManagement.ShortCutManagement"
                    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">
    <Style TargetType="shortcut:HotkeyEditorControl">
        <Style.Resources>
            <ResourceDictionary>
                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                    <Setter Property="BorderBrush" Value="{DynamicResource adonisUi:Brushes.AccentForegroundBrush}"/>
                    <Setter Property="BorderThickness" Value="{adonisUi:Space 0, 0, 0, 0.5}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="{adonisUi:Space 0, 1}"/>
                </Style>

                <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Layer3BackgroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Layer2BackgroundColor}}"/>
            </ResourceDictionary>
        </Style.Resources>
    </Style>
</ResourceDictionary>