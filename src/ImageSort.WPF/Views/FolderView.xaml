<reactiveui:ReactiveUserControl x:Class="ImageSort.WPF.Views.FolderView"
                                x:TypeArguments="vm:FolderViewModel"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:ImageSort.WPF.Views"
                                xmlns:vm="clr-namespace:ImageSort.ViewModels;assembly=ImageSort"
                                xmlns:reactiveui="http://reactiveui.net"
                                xmlns:converters="clr-namespace:ImageSort.WPF.Converters"
                                mc:Ignorable="d" 
                                d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Margin="3">
        <Image Name="FolderIcon"
               Margin="0 0 5 0" />
        <TextBlock Name="FolderName"/>
    </StackPanel>
</reactiveui:ReactiveUserControl>
