<adonisControls:AdonisWindow x:Class="ImageSort.WPF.Views.Credits.CreditsWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:local="clr-namespace:ImageSort.WPF.Views.Credits"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             xmlns:text="clr-namespace:ImageSort.Localization;assembly=ImageSort.Localization"
                             mc:Ignorable="d"
                             Title="{x:Static text:Text.CreditsWindowTitle}" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel>
            <TextBlock Text="{x:Static text:Text.CreditsWindowLeadingText}" FontSize="16" Margin="{adonisUi:Space 1, 1, 2, 1}"/>

            <local:UsedLibraryView LibraryName=".NET Core"
                                   ProjectUrl="https://dotnet.microsoft.com/"
                                   LicenseUrl="https://github.com/dotnet/core/blob/master/LICENSE.TXT"/>
        </StackPanel>
    </ScrollViewer>
</adonisControls:AdonisWindow>
